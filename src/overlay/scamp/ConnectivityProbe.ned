package oversim.overlay.scamp;

import oversim.common.IGlobalFunctions;


simple ScampConnectivityProbe {
    parameters: 
        double connectivityProbeInterval @unit(s); // interval after which to check connectivity
        
        @display("i=block/network2");
}

module ScampConnectivityModules like IGlobalFunctions {
	parameters:
	    double connectivityProbeInterval @unit(s);
	submodules:
	    probe: ScampConnectivityProbe{
	        connectivityProbeInterval = connectivityProbeInterval;
	    }
}